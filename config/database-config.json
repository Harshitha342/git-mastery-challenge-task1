{
  "production": {
    "connection": {
      "host": "prod-db.example.com",
      "port": 5432,
      "database": "devops_production",
      "ssl_mode": "require",
      "pool_size": 20
    },
    "backup": {
      "enabled": true,
      "schedule": "0 2 * * *",
      "retention_days": 30
    },
    "replication": {
      "enabled": true,
      "mode": "master-slave",
      "failover": "automatic"
    }
  },

  "development": {
    "connection": {
      "host": "localhost",
      "port": 5432,
      "database": "devops_development",
      "ssl_mode": "disable",
      "pool_size": 5
    },
    "backup": {
      "enabled": false,
      "schedule": "manual"
    },
    "features": {
      "seed_data": true,
      "debug_queries": true
    }
  },

  "experimental": {
    "connection": {
      "host": "cluster-ai-db.example.com",
      "port": 5432,
      "database": "devops_experimental",
      "ssl_mode": "require",
      "pool_size": 50,
      "distributed": true,
      "read_replicas": 4
    },
    "backup": {
      "enabled": true,
      "schedule": "*/30 * * * *",
      "retention_days": 7,
      "ai_optimized": true
    },
    "ai_features": {
      "predictive_indexing": true,
      "auto_query_tuning": true,
      "anomaly_detection": true,
      "model_version": "v2.0-beta"
    },
    "notes": "Experimental AI database optimizations â€” not for production use"
  }
}
